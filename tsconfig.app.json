{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "mocks"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    // Permet de générer les métadonnées de build pour les builds incrémentaux
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    // Alias pour utiliser "@/..." comme raccourci vers ./src
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Résolution des modules comme dans Node.js (requis pour index.ts)
    "moduleResolution": "node",

    // Pour supporter les imports .vue et éviter les erreurs d'importation
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
